{
    "title": "My rule",
    "rules": [
	{
	    "description": "command + h to backspace (without emacs)",
	    "manipulators": [
		{
		    "type": "basic",
		    "from": {
			"modifiers": {
			    "mandatory": [
				"left_command"
			    ]
			},
			"key_code": "h"
		    },
		    "to": [
			{
			    "repeat": true,
			    "key_code": "delete_or_backspace"
			}
		    ],
		    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "^org\\.gnu\\.Emacs"
                            ]
                        }
                    ]
		    
		}
	    ]
	},
